			    <input name="email" type="text" class="form-control col-sm-6">
			</div>

			<div class="form-group">
				<label>Bio :</label>
				<textarea name="bio" class="form-control col-sm-6"></textarea>
			</div>
			<br>

			<div class="col-sm-10">
				<input type="submit" value="Create User" class="btn btn-primary btn-lg col-sm-5">
			</div>
		</form>

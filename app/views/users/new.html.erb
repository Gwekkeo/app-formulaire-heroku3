			<label>Email :</label>
		    <input name="email" type="text" class="form-control col-sm-6">
		</div>

		<div class="input-group">
		  <div class="input-group-prepend">
		    <span class="input-group-text">Biographie</span>
		  </div>
		  <textarea name="bio" class="form-control col-sm-6" aria-label="With textarea" placeholder="Raconter moi votre vie :D"></textarea>
		</div>
		<br>

		<div class="col-sm-10">
			<input type="submit" name="Envoyer" class="btn btn-primary btn-lg col-sm-5">
		</div>
	</form>


